---
import '@/styles/globals.css';
import Navigation from './navigation.astro';
import Header from './header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aaron Dodd's personal website">
		<meta name="viewport" content="width=device-width" />

		<link rel="manifest" href="/manifest.webmanifest?ver=1">
		<link rel="icon" href="/favicon.ico?ver=1" sizes="32x32">
		<link rel="icon" href="/icon.svg?ver=1" type="image/svg+xml">
		<link rel="apple-touch-icon" href="/apple-touch-icon.png?ver=1">

		<link rel="stylesheet preload" href="/normalize.css">
		<link rel="stylesheet preload" href="/magick.css">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="grid-container">
			<Header title="aaron's website" />
			<slot />
			<Navigation />
		</main>
	</body>
</html>
